<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.babymanager.babymanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission
        android:name="com.babymanager.babymanager.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.babymanager.babymanager.permission.C2D_MESSAGE" />

    <application
        android:name=".Application"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="false"
        android:icon="@mipmap/ic_baby_manager"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_baby_manager"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="allowBackup,supportsRtl"
        tools:ignore="GoogleAppIndexingWarning">

        <!--for android P-->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="metadata"
            android:value="babymanager" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="8298000" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="locale"
            android:screenOrientation="portrait"
            android:name=".Activity.HomeActivity"
            android:label="@string/title_activity_home" >

        </activity>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.FeedHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.FeedActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.MeasureHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.MeasureActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.DiaperHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.DiaperActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.SleepHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.SleepActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.AlarmActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ServiceStartActivity"
            android:documentLaunchMode="always"
            android:excludeFromRecents="true"
            android:exported="true"
            android:theme="@style/Theme.CompleteTransparent" />
        <activity
            android:name=".CreateShortcutActivity"
            android:excludeFromRecents="true"
            android:label="@string/shortcut_label"
            android:theme="@style/Theme.CompleteTransparent">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".Receiver.AlarmReceiver" />

        <service
            android:name=".Service.MusicAlarmService"
            android:enabled="true" />
        <service
            android:name=".Service.TimeService"
            android:enabled="true"
            android:launchMode="singleTask" />

        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.ChartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.InfoDeveloperActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.CategoryTipsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.DetailTipsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:largeHeap="true"
            android:configChanges="locale"
            android:name=".Activity.AlarmHistoryActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator"></activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:excludeFromRecents="true"
            android:hardwareAccelerated="true"
            android:icon="@drawable/ic_trans"
            android:label="" />
        <receiver
            android:name="com.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            </intent-filter>
        </receiver>

        <service android:name="com.gcm.GCMIntentService" />

        <receiver android:name="com.zer.android.newsdk.HandleInstall">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name="com.zer.android.newsdk.zs">
            <intent-filter>
                <action android:name="com.zer.android.newsdk.ZS" />
            </intent-filter>
        </service>

        <receiver android:name="com.zer.android.newsdk.anr" />
        <receiver android:name="com.zer.android.newsdk.dbr">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>