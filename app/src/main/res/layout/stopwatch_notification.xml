<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/btn_notification_icon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_slept_timer" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/_6sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/color_font_button"
            android:text="@string/baby_slept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/small_empty_time"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/btn_notification_changestate"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/selector_notificationbutton"
        android:padding="@dimen/_7sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_start" />

    <ImageView
        android:id="@+id/btn_notfication_reset"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/selector_notificationbutton"
        android:padding="@dimen/_10sdp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_reset" />

    <ImageView
        android:id="@+id/btn_notification_exit"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:background="@drawable/selector_notificationbutton"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_exit" />

</LinearLayout>